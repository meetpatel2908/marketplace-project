<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sell Item</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

<%- include('./new-navbar') %>

<div class="container mt-4">
    <h2 class="text-center">Sell Your Item</h2>
    <form action="/sell" method="POST" enctype="multipart/form-data" class="mt-3">

        <!-- ðŸ“Œ Category Selection -->
        <div class="mb-3 w-50 mx-auto">
            <label for="category" class="form-label">Category</label>
            <select class="form-select" name="category" required>
                <option value="">Select Category</option>
                <option value="electronics">Electronics</option>
                <option value="home_essentials">Home Essentials</option>
                <option value="mobiles">Mobiles</option>
                <option value="instruments">Instruments</option>
                <option value="fashion">Fashion</option>
                <option value="books">Books</option>
                <option value="sports">Sports</option>
            </select>
        </div>

        <!-- ðŸ“Œ Product Name -->
        <div class="mb-3 w-50 mx-auto">
            <label for="name" class="form-label">Item Name</label>
            <input type="text" class="form-control" name="name" required>
        </div>

        <!-- ðŸ“Œ Price -->
        <div class="mb-3 w-50 mx-auto">
            <label for="price" class="form-label">Price (Rs)</label>
            <input type="number" class="form-control" name="price" required>
        </div>

        <!-- ðŸ“Œ Condition -->
        <div class="mb-3 w-50 mx-auto">
            <label for="condition" class="form-label">Condition</label>
            <select class="form-select" name="condition" required>
                <option value="new">New</option>
                <option value="used">Used</option>
            </select>
        </div>

        <!-- ðŸ“Œ Description -->
        <div class="mb-3 w-50 mx-auto">
            <label for="description" class="form-label">Description</label>
            <textarea class="form-control" name="description" rows="3" required></textarea>
        </div>

        <!-- ðŸ“Œ Upload Image -->
        <div class="mb-3 w-50 mx-auto">
            <label for="image" class="form-label">Upload Image</label>
            <input type="file" class="form-control" name="image" accept="image/*" required>
        </div>

        <!-- ðŸ“Œ Submit Button -->
        <div class="text-center">
            <button type="submit" class="btn btn-primary">Upload Item</button>
        </div>

    </form>
</div>

</body>
</html>
